{
	"name": "@adonisjs/view",
	"version": "6.1.1",
	"description": "View/template engine for AdonisJs",
	"main": "build/providers/ViewProvider.js",
	"files": [
		"build/adonis-typings",
		"build/providers",
		"build/src",
		"build/instructions.md"
	],
	"typings": "./build/adonis-typings/index.d.ts",
	"scripts": {
		"mrm": "mrm --preset=@adonisjs/mrm-preset",
		"pretest": "npm run lint",
		"test": "node japaFile.js",
		"lint": "eslint . --ext=.ts",
		"clean": "del build",
		"compile": "npm run lint && npm run clean && tsc",
		"build": "npm run compile",
		"commit": "git-cz",
		"release": "np",
		"version": "npm run build",
		"sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/view",
		"format": "prettier --write .",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/adonisjs/view.git"
	},
	"keywords": [
		"view",
		"edge.js",
		"template"
	],
	"author": "virk,adonisjs",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/adonisjs/view/issues"
	},
	"homepage": "https://github.com/adonisjs/view#readme",
	"devDependencies": {
		"@adonisjs/core": "^5.3.3",
		"@adonisjs/mrm-preset": "^4.1.2",
		"@adonisjs/repl": "^3.1.6",
		"@adonisjs/require-ts": "^2.0.8",
		"@adonisjs/sink": "^5.1.6",
		"@poppinss/dev-utils": "^1.1.5",
		"@types/node": "^16.9.0",
		"copyfiles": "^2.4.1",
		"del-cli": "^4.0.1",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-adonis": "^1.3.3",
		"eslint-plugin-prettier": "^3.4.0",
		"github-label-sync": "^2.0.2",
		"husky": "^7.0.1",
		"japa": "^3.1.1",
		"mrm": "^3.0.5",
		"np": "^7.5.0",
		"prettier": "^2.3.2",
		"typescript": "^4.3.5"
	},
	"peerDependencies": {
		"@adonisjs/core": "^5.3.0"
	},
	"nyc": {
		"exclude": [
			"test"
		],
		"extension": [
			".ts"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"np": {
		"contents": ".",
		"anyBranch": false
	},
	"dependencies": {
		"edge-error": "^2.0.6",
		"edge-supercharged": "^3.1.1",
		"edge.js": "^5.3.2"
	},
	"adonisjs": {
		"types": "@adonisjs/view",
		"instructionsMd": "./build/instructions.md",
		"providers": [
			"@adonisjs/view"
		],
		"env": {
			"CACHE_VIEWS": false
		},
		"metaFiles": [
			{
				"pattern": "resources/views/**/*.edge",
				"reloadServer": false
			}
		]
	},
	"publishConfig": {
		"access": "public",
		"tag": "latest"
	}
}
